<div class="control-group pic-group">
  <div class="controls">

    {{#if pic }}
      <img src="{{ pic }}" />
    {{else}}
      <img src="/images/default-avatar.jpg" />
      <p class="noavatar">Your g+ account as no avatar. <a href="https://www.google.com/settings/account" target="_blank">Upload one now</a>, then <a href="/auth/google?return_to=/find-an-expert">refresh this page</a>.</p>
    {{/if}}

    <input type="hidden" value="{{ pic }}" name="pic" id="pic{{num}}"/>
  </div>
</div>

<div class="personal-info-group">

<div class="control-group">
  <label for="contactName{{num}}" class="control-label">Full name</label>
  <div class="controls">
    <input type="text" data-error-style="inline" value="{{ fullName }}" placeholder="Full name" name="fullName" id="contactName{{num}}" class="input-block-level">
  </div>
</div>
<div class="control-group" style="display:none">
  <label for="contactGmail{{num}}" class="control-label">Google account email <span class="muted">for Google+ Hangouts</span></label>
  <div class="controls">
      <input type="text" data-error-style="inline" value="{{ gmail }}" placeholder="Google account email" name="gmail" id="contactGmail{{num}}" class="input-block-level">
    </div>
</div>
<div class="control-group">
  <label for="contactEmail{{num}}" class="control-label">Primary contact email <span class="muted">* If different from your google email</span></label>
  <div class="controls">
    <input type="text" data-error-style="inline" value="{{ email }}" placeholder="Email" name="email" id="contactEmail{{num}}" class="input-block-level">
  </div>
</div>
<div class="control-group" style="display:none">
  <label for="contactPhone{{num}}" class="control-label">Phone <span class="muted">* if you'd like us to contact you by phone</span></label>
  <div class="controls">
    <input type="text" data-error-style="inline" value="{{ phone }}" placeholder="Phone" name="phone" id="contactPhone{{num}}" class="input-block-level">
  </div>
</div>
<div class="control-group" style="display:none">
  <label for="contactTitle{{num}}" class="control-label">Title</label>
  <div class="controls">
    <input type="text" data-error-style="inline" value="{{ title }}" placeholder="Title" name="title" id="contactTitle{{num}}" class="input-block-level">
  </div>
</div>
<div class="control-group" style="display:none">
  <label for="contactTimezone{{num}}" class="control-label">Timezone</label>
  <div class="controls">
    <input type="text" data-error-style="inline" value="{{ timezone }}" placeholder="Timezone" name="timezone" id="contactTimezone{{num}}">
  </div>
</div>
<div class="control-group">
  <label for="contactTwitter{{num}}" class="control-label">Twitter  <span class="muted">* Optional, we love showing customers twitter love</span></label>
  <div class="controls">
    <div class="input-prepend">
      <span class="add-on">@</span>
      <input type="text" data-error-style="inline" value="{{ twitter }}" placeholder="twitter handle" name="twitter" id="contactTwitter{{num}}" class="input-block-level" style="width:296px">
    </div>
  </div>
</div>

<input type="hidden" value="{{ userId }}" name="userId" id="userId{{num}}"/>

</div>
