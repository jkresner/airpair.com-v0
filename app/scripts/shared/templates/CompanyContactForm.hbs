<div class="control-group">
  <div class="controls">
    <img src="{{ avatarUrl }}" />
    <input type="hidden" value="{{ avatarUrl }}" name="avatarUrl" id="avatarUrl{{num}}"/>
  </div>
</div>
<div class="control-group">
  <label for="contactName{{num}}" class="control-label">Full name</label>
  <div class="controls">
    <input type="text" data-error-style="inline" value="{{ fullName }}" placeholder="Full name" name="fullName" id="contactName{{num}}">
  </div>
</div>
<div class="control-group">
  <label for="contactEmail{{num}}" class="control-label">Primary email</label>
  <div class="controls">
    <input type="text" data-error-style="inline" value="{{ email }}" placeholder="Email" name="email" id="contactEmail{{num}}">
  </div>
</div>
<div class="control-group">
  <label for="contactGmail{{num}}" class="control-label">Google email <span class="muted" style="font-size:11px">(for Google+ Hangout)</span></label>
  <div class="controls">
    <input type="text" data-error-style="inline" value="{{ gmail }}" placeholder="Google account email" name="gmail" id="contactGmail{{num}}">
  </div>
</div>
<div class="control-group" style="display:none">
  <label for="contactPhone{{num}}" class="control-label">Phone</label>
  <div class="controls">
    <input type="text" data-error-style="inline" value="{{ phone }}" placeholder="Phone" name="phone" id="contactPhone{{num}}">
  </div>
</div>
<div class="control-group" style="display:none">
  <label for="contactTitle{{num}}" class="control-label">Title</label>
  <div class="controls">
    <input type="text" data-error-style="inline" value="{{ title }}" placeholder="Title" name="title" id="contactTitle{{num}}">
  </div>
</div>
<div class="control-group">
  <label for="contactTimezone{{num}}" class="control-label">Timezone</label>
  <div class="controls">
    <input type="text" data-error-style="inline" value="{{ timezone }}" placeholder="Timezone" name="timezone" id="contactTimezone{{num}}">
  </div>
</div>
<div class="control-group">
  <label for="contactTwitter{{num}}" class="control-label">Twitter</label>
  <div class="controls">
    <input type="text" data-error-style="inline" value="{{ twitter }}" placeholder="@twitter" name="twitter" id="contactTwitter{{num}}">
  </div>
</div>

<input type="hidden" value="{{ userId }}" name="userId" id="userId{{num}}"/>