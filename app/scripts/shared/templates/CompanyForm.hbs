<fieldset>
  <legend><b>{</b> Contact info <b>}</b></legend>

    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <h4>Error</h4>
    </div>

  </legend>

  <p style="font-size:18px;margin:0px 0px 30px 0px"><i>Step 2 of 3</i></p>

  <div id="companyContacts"><div id="primaryContact"></div>


  </div>

  <div id="companyInfo">
    <div>
      <div class="control-group">
        <label class="control-label" for="companyName">Company name</label>
        <div class="controls">
          <input style="width:320px" type="text" id="companyName" name="name" placeholder="Company (or app) name" value="{{ name }}" data-error-style="inline">
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="companyUrl">Company url</label>
        <div class="controls">
          <div class="input-prepend" style="width:88%">
            <span class="add-on">http://</span>
            <input style="width:400px" class="input-block-level" type="text" id="companyUrl" name="url" placeholder="Url of company or application" value="{{ url }}" data-error-style="inline">
          </div>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="companyAbout">What does your company / app do? <span class="muted">minimum 140 characters</span></label>
        <div class="controls">
          <textarea class="input-block-level" id="companyAbout" name="about" placeholder="About your company:                                                                          industry / problems are you solving" value="{{ soId }}" data-error-style="inline"></textarea>
        </div>
      </div>
    </div>
  </div>

  <div style="clear:both"></div>

  <div class="form-actions">
    <a href="#" class="save red-button">Continue</a>
    <a href="/dashboard" class="btn-cancel btn">Cancel</a>
  </div>

</fieldset>