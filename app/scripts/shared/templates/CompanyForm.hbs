<fieldset>
  <legend>Contact info
  <span class="stepNum">Step 2 of 3</span>
  </legend>

    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <h4>Error</h4>
    </div>

  </legend>

  <div id="companyContacts"><div id="primaryContact"></div>


  </div>

  <div id="companyInfo">
    <div>
      <div class="control-group">
        <label class="control-label" for="companyName">Company (or app) name</label>
        <div class="controls">
          <input style="width:320px" type="text" id="companyName" name="name" placeholder="Company (or app) name" value="{{ name }}" data-error-style="inline">
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="companyUrl">Company url</label>
        <div class="controls">
          <div class="input-prepend" style="width:88%">
            <span class="add-on">http://</span>
            <input class="input-block-level" type="text" id="companyUrl" name="url" placeholder="Url of company or application" value="{{ url }}" data-error-style="inline">
          </div>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="companyAbout">What does your company (or app) do?</label>
        <div class="controls">
          <span class="charCount"></span>
          <textarea class="input-block-level" id="companyAbout" name="about" placeholder="Tell us about your industry / problems are you solving" value="{{ soId }}" data-error-style="inline"></textarea>
        </div>
         <span class="muted">Please supply min 50 chars about your company or app so can we find you experts that may have both technical & relevant industry experience.</span>
      </div>
    </div>
  </div>

  <div style="clear:both"></div>

  <div class="form-actions">
    <a href="save" class="save button">Continue</a>
    <a href="/dashboard" class="btn-cancel button button-gray">Cancel</a>
  </div>

</fieldset>