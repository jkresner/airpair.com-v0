{{#with company}}

<div style="float:left;width:400px;margin-right:40px;height:80px;padding:5px">
  <label>Company</label>
  <a href="#" data-toggle="popover" data-content="{{about}}" data-trigger="hover">{{name}}</a>
  {{#if url}}
  <div style="font-weight:normal"><a href="http://{{ url }}" target="_blank">http://{{ url }}</a></div>
  {{/if}}
</div>
<div style="float:left">
  <label>Primary contact</label>
    {{#each contacts}}
    <div>
      {{#if pic }}
        <img src="{{ pic }}" style="height:40px" />
      {{else}}
        <img src="/images/default-avatar.jpg" style="height:40px" />
      {{/if}}
    </div>

    {{/each}}
</div>

{{/with}}


