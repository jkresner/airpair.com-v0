
{{#with expert}}

  <div class="expertMini">
    <div class="fullName">
      {{ name }}
    </div>
    <hr />
    {{#if username }}
      <b class="username">@{{ username }}</b>
    {{/if}}

    <img src="{{ pic }}?s=240" class="pic" />

    <div class="links">

      {{> DevLinks }}
    </div>

    {{#if tags }}
    <div class="tags">
      {{#each tags }}
        <span class="label label-tag">{{ short }}</span>
      {{/each }}
    </div>
    {{/if}}

  </div>

{{/with}}

<a href="#" class="mailMatched" data-id="{{ expert._id }}">matched</a><a href="#" class="updateStatus">{{ status }}</a>
<a href="#" class="delete deleteSuggested" data-id="{{ _id }}">x</a>
