<div class="suggested">

  {{#with expert}}
  <div style="height:40px">
    <img src="{{ pic }}?s=240" class="pic" />

    <div class="deets">
      <span class="names">
        ${{ rate }} {{ name }}
        {{#if username }} (@{{ username }}) {{/if}}
        <div class="links">{{> DevLinks }}</div>
      </span>

      {{#if tags }}
      <span class="tags">
        {{#each tags }}
          <span class="label label-tag">{{ short }}</span>
        {{/each }}
      </span>
      {{/if}}

    </div>
  </div>
  {{/with}}

  <div>

    <a href="#" data-id="{{ _id }}" class="delete deleteSuggested btn btn-small btn-danger"><i class="icon-trash icon-white"></i> </a>

    <a href="mailto:{{expert.name}}%20%3c{{expert.email}}%3e?subject=airpair - request cancelled {{tagsString}}?&body={{mailTemplates.cancelled}}" class="email btn btn-small btn-warning" target="_blank"><i class="icon-envelope icon-white"></i> canceled</a>

    <a href="mailto:{{expert.name}}%20%3c{{expert.email}}%3e?subject=airpair - request {{tagsString}}?&body={{mailTemplates.another}}" class="email btn btn-small btn-warning" target="_blank"><i class="icon-envelope icon-white"></i> another</a>

    <a href="mailto:{{expert.name}}%20%3c{{expert.email}}%3e?subject=airpair - you were chosen for #{{_id}}?&body={{mailTemplates.suggested}}" class="email btn btn-small btn-warning" target="_blank"><i class="icon-envelope icon-white"></i> chosen</a>


    <a href="mailto:{{expert.name}}%20%3c{{expert.email}}%3e?subject=airpair - suggested for help {{tagsString}}?&body={{mailTemplates.suggested}}" class="email btn btn-small btn-warning" target="_blank"><i class="icon-envelope icon-white"></i> suggested</a>

    <span class="status label label-{{expertStatus}}">{{ expertStatus }}</span>

  {{#if expertComment}}
    <p>{{ expertComment }}</p>
  {{else}}
    <p>no comment yet</p>
  {{/if}}

  </div>
</div>