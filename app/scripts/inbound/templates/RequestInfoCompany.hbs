<dl>
  <dt>Company</dt>
  <dd><a href="#" data-toggle="popover" data-content="{{about}}" data-trigger="hover">{{name}}</a></dd>
  {{#if url}}
  <dt style="display:none">Url</dt>
  <dd style="font-weight:normal"><a href="http://{{ url }}" target="_blank">http://{{ url }}</a></dd>
  {{/if}}
  <dt>Primary contact</dt>
  <dd class="contact">
    {{#each contacts}}

    <div>
      {{#if pic }}
        <img src="{{ pic }}" />
      {{else}}
        <img src="/images/default-avatar.jpg" />
      {{/if}}
    </div>

    <table>
      <tr>
        <th>Name</th>
        <td>{{fullName}}</td>
        <td style="width:20px"> </td>
        <td><a id="receivedBtn" href="https://mail.google.com/mail/?view=cm&fs=1&tf=1&to={{email}}&su=ACTION REQUIRED - Upcoming AirPair Session!&body=Hi {{firstName}},{{../mailTemplates.received}}" target="_blank" class="email btn btn-small btn-warning"><i class="icon-envelope icon-white"></i> Received</a></td>
      </tr>
      <tr>
        <th>Email</th>
        <td>{{email}}</td>
        <td></td>
        <td><a href="https://mail.google.com/mail/?view=cm&fs=1&tf=1&to={{email}}&su=AirPair - We've got you experts!&body=Hi {{firstName}},{{../mailTemplates.review}}" target="_blank" class="email btn btn-small btn-warning"><i class="icon-envelope icon-white"></i> Review</a></td>
      </tr>
      <tr>
        <th>Gmail</th>
        <td>{{gmail}}</td>
        <td></td>
        <td><a href="https://mail.google.com/mail/?view=cm&fs=1&tf=1&to={{email}}&su=How was your {{../tagsString}} AirPair?&body={{firstName}},{{../mailTemplates.followup}}" target="_blank" class="email btn btn-small btn-warning"><i class="icon-envelope icon-white"></i> How was?</a></td>
      </tr>
      <tr>
        <th>Twitter</th>
        <td>{{twitter}}</td>
        <td></td>
        <td><a href="https://mail.google.com/mail/u/0/?shva=1#search/%22{{fullName}}%22+OR+{{email}}" class="email btn btn-small btn-inverse" target="_blank"><i class="icon-envelope icon-white"></i> History</a>
        </td>
      </tr>
    </table>

    {{/each}}
  </dd>
</dl>

