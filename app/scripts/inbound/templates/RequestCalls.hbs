<legend>Scheduled</legend>
<a class="btn btn-success scheduleCall" href="/adm/schedule/{{_id}}">
  <span class="icon-white icon-calendar"></span>&nbsp;
  Schedule Call
</a>
<div id="scheduled">
  <br>
  {{#each calls}}
    <p class="call">
      <a href="/adm/schedule/{{_id}}" title="edit call information">edit</a>
      <img src="{{expert.pic}}" alt="{{expert.name}}" style="height: 40px">
      {{expert.name}}
      on <a href="{{gcal.htmlLink}}" title="view on google calendar" target="_blank">
        {{dateTime datetime}} (PST)
      </a>
      for {{{duration}}} {{inflect duration "hour" "hours"}}.
      {{status}}. {{type}}
    </p>
  {{else}}
  <p>No calls scheduled</p>
  {{/each}}
</div>
