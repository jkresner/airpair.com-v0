<legend>Scheduled</legend>
<div id="scheduled">
  {{#each calls}}
    <div class="call">
      <!--
      <a href="/adm/schedule/{{../_id}}/call/{{_id}}" title="edit call information">edit</a>
      -->
      <img src="{{expert.pic}}" alt="{{expert.name}}">

      <a href="{{gcal.htmlLink}}" class="dateTime" title="view on google calendar" target="_blank">
        {{{callDateTime datetime}}}
      </a>

      {{dateTime}}

      <label>{{type}}</label>
      <label class="duration"> {{{duration}}} {{inflect duration "hour" "hours"}}
      </label>

      {{!--
      <span class="label label-{{status">{{status</span>}}

      {{#each recordings}}
      <a href="{{link}}" class="zocial youtube icon" target="_blank"></a>
      {{/each}}

    </div>
  {{else}}
    <p>No calls scheduled</p>
  {{/each}}
</div>
