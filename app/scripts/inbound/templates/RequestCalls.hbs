<legend>Scheduled</legend>
<div id="scheduled">
  {{#each calls}}
    <div class="call">
      <a href="/adm/call/edit/{{_id}}" title="edit call information">
        <span>edit</span>
        <img src="{{expert.pic}}" alt="{{expert.name}}">
      </a>

      <a href="{{gcal.htmlLink}}" class="dateTime" title="view on google calendar" target="_blank">
        {{{callDateTime datetime}}}
      </a>

      <label>{{type}}</label>
      <label class="duration">
        {{duration}} {{inflect duration "hour" "hours"}}
      </label>

      {{#if gcal}}
      {{else}}
        {{#is status 'pending'}}<label><strong>{{status}}</strong></label>{{/is}}
        {{#is status 'declined'}}<label><strong>{{status}}</strong></label>{{/is}}
      {{/if}}
      <!-- <span class="label label-{{status}}">{{status}}</span> -->

      {{#each recordings}}
      <a href="http://youtu.be/{{data.id}}" target="_blank">
        <img src="{{data.snippet.thumbnails.default.url}}"
          class="youtubeThumbnail" alt="youtube thumbnail">
      </a>
      {{/each}}

    </div>
  {{else}}
    <p>No calls scheduled</p>
  {{/each}}
</div>
