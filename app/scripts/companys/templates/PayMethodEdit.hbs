
<div class="form-actions nav-top">
  <div class="controls">
    <a href="#list" class="btn">Back</a>
    <a href="#deletecard/{{_id}}" class="btn btn-danger remove">delete</a>
  </div>
</div>

<div style="float:left;width:30%">

  {{#each sharers}}
    <p><b>{{email}}</b> <a href="#" data-email="{{email}}" class="unshare">unshare</a>
  {{/each}}

  <hr />
  <div id="share-control-group" class="control-group">
    <label class="control-label" for="shareEmail">Share card with email</label>
    <div class="controls">
      <input type="text" name="shareEmail" placeholder="Email"><a href="#" class="btn btn-warning btn-small share">Share</a>
    </div>
  </div>


  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <h4>Request save</h4>
  </div>

  <div class="alert alert-error">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <h4>Error</h4>
  </div>

</div>



<div style="float:right;width:65%">
  <div id="canceled-control-group" class="control-group">
    <label class="control-label">Details</label>
    <div class="controls">
      <pre style="font-size:10px;line-height:1.1em">{{ cardJSON }}</pre>
    </div>
  </div>
</div>
