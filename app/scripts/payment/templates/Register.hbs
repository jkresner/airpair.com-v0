<form action="" method="POST" id="payment-form">
  <span class="payment-errors text-error"></span>

  <div class="form-row">
    <label>
      <span>Card Number</span>
      <input type="text" size="20" data-stripe="number"/>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>CVC</span>
      <input type="text" size="4" data-stripe="cvc"/>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>Expiration (MM/YYYY)</span>
      <input type="text" size="2" data-stripe="exp-month" style="width:40px" />
    </label>
    <span> / </span>
    <input type="text" size="4" data-stripe="exp-year" style="width:40px" />
  </div>
  
  <div class="form-actions" style="border-top:1px solid gray">
     <button class="button" type="submit">Pay membership</button>
  </div>

</form>