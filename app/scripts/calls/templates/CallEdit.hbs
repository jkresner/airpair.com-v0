  <div class="datetimeduration">
    <div class="control-group">
      <label class="control-label" for="duration">Duration
        (previously {{../duration}} {{inflect ../duration "hour" "hours"}})
      </label>
      <div class="controls">
        <select name="duration">
          {{#each selectOptions}}
            <option {{#is this ../../duration}}selected{{/is}}
              value="{{this}}">
              {{this}} {{inflect this "hour" "hours"}}
            </option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="date">Timezone / Date / Time
        (previously {{{callDateTime ../datetime}}})</label>
      <div class="controls">
        <select name="timezone" class="input-mini">
          <option value="PST" selected>PST</option>
        </select>
        <input name="date" type="text" class="datepicker input-medium"
          value="{{../date}}" placeholder="pick a date">
        <input name="time" type="text" class="timepicker input-mini"
            value="{{../time}}" placeholder="Pick time">
        <a href="{{../gcal.htmlLink}}" target="_blank">
          <i class="icon-calendar icon"></i> Event
        </a>
      </div>
    </div>
  </div> <!-- end .datetimeduration -->
  <div class="control-group">
    <div class="controls">
      <label class="control-label">
        <input name="sendNotifications" type="checkbox" checked>
        Send Google Calendar Notification Email
      </label>
    </div>
  </div>
