    <label class="control-label" for="duration">Notes</label>
    <div class="controls">
      <textarea name="notes" class="input-xxlarge">{{../notes}}</textarea>
    </div>
  </div>
{{/expert}}

  {{#if errors}}
  <div class="alert-error">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <h4>Error</h4>
    {{#each errors}}
      Invalid {{param}}<br>
    {{/each}}
