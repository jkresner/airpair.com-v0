<div class="call">
{{#if isAdmin}}
<a href="/adm/call/edit/{{_id}}" title="call information" target="_blank">
  <img src="{{expert.pic}}" alt="{{expert.name}}">
</a>
{{else}}
  <img src="{{expert.pic}}" alt="{{expert.name}}">
{{/if}}

<a href="{{gcal.htmlLink}}" class="dateTime" title="view on google calendar" target="_blank">
  {{{callDateTime datetime}}}
</a>

<label>{{type}}</label>
<label class="duration">
  {{duration}} {{inflect duration "hour" "hours"}}
</label>

{{#if hasRecording}}
  {{#each recordings}}
  <a href="http://youtu.be/{{data.id}}" target="_blank">
    <img src="{{data.snippet.thumbnails.default.url}}"
      class="youtubeThumbnail" alt="youtube thumbnail">
  </a>
  {{/each}}
{{else}}
    <img src="/images/no-recording.jpg"
      class="youtubeThumbnail" alt="no recording">
{{/if}}
</div>
