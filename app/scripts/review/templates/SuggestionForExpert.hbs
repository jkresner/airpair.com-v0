<div class="suggestions">
<h2><em>{ </em>Review request<em> }</em></h2>
<div class="suggestionInfo expertView">

    {{#if customerFeedback}}
      <div class="feedback">
        <label><b>Your feedback</b></label>
        <img src="{{custPic}}"  />
        <div><b>{{ customerRating }}/5</b><br />
        {{ customerFeedback }}</div>
      </div>
    {{/if}}
    <div class="well expertFeedback" {{#if expertFeedback}}style="display:none"{{/if}}>
      <h4>Suggestion feedback</h4>

        <div class="control-group">
          <label class="control-label" for="expertRating"></label>
          <div class="controls">
             <select name="expertRating">
                <option value="5">5 - Sounds super fun</option>
                <option value="4">4 - Looks like a good fit</option>
                <option value="3">3 - I'll do it this one time</option>
                <option value="2">2 - I see why you chose me, but...</option>
                <option value="1">1 - Brief does not match me at all</option>
              </select>
          </div>
        </div>


        <div class="control-group">
          <label class="control-label" for="expertFeedback"></label>
          <div class="controls">
            <span class="charCount">0 chars</span>
            <textarea name="expertFeedback" placeholder="What you think of this suggestion? Feedback helps us learn your prefereces & get better at what we send you.">{{ expertFeedback }}</textarea>
          </div>
        </div>

        <h4>Do you want this airpair?</h4>
        <div class="control-group">
          <label class="control-label" for="expertStatus"></label>
          <div class="controls">
            <select name="expertStatus">
              <option value="">... please select</option>
              <option value="available">I'm available for this!</option>
              <option value="abstained">This one's not for me.</option>
            </select>
          </div>
        </div>

        <div class="control-group">
          <label class="control-label" for="expertComment"></label>
          <div class="controls">
              <textarea class="hideShowSave" name="expertComment" placeholder="Comment">{{ expertComment }}</textarea>
          </div>
        </div>

        <div class="control-group">
          <label class="control-label" for="expertAvailability"></label>
          <div class="controls">
              <textarea class="hideShowSave" name="expertAvailability" placeholder="What is your location, timezone and availability?">{{ expertAvailability }}</textarea>
          </div>
        </div>

        <hr />

        <a href="#expertFeedback" class="button saveFeedback hideShowSave">Submit</a>

       <div style="clear:both"></div>
    </div>

    {{#if expertFeedback }}
      <div class="feedback">
        <label><b>Expert feedback</b></label>
        <img src="{{expert.pic}}" />
        <div><b>{{ expertRating }}/5</b><br />
        {{ expertFeedback }}</div>
        <br />
        <hr />
        {{ expertComment }}
        <div><b>Availability</b><br />
        {{ expertAvailability }}</div>
      </div>
    {{/if}}

</div>
{{#with expert}}
  <div style="float:right;width:110px">
  {{> ExpertMini }}
  </div>
{{/with}}
</div>