
<div id="info">
  <h2>Request info</h2>

  {{#if isOwner}}<div><label>Budget</label> {{budget}}/{{pricing}} = ${{ total }} p.h.</div>{{/if}}

   {{#with company}}
   <dl>
    <dt>Company</dt>
    <dd>{{name}}</dd>
    {{#if url}}
    <dt style="display:none">Url</dt>
    <dd style="font-weight:normal"><a href="http://{{ url }}" target="_blank">http://{{ url }}</a></dd>
    {{/if}}
    <dt style="display:none">About</dt>
    <dd>{{about}}}</dd>
    <dt>Contact</dt>
    <dd class="contact">
      {{#each contacts}}

      <div>
        <img src="{{pic}}" />
      </div>

      <dl>
        <dt>Name</dt>
        <dd>{{fullName}}</dd>
        <dt>Email</dt>
        <dd>{{email}}</dd>
        <dt>Gmail</dt>
        <dd>{{gmail}}</dd>
        <dt>Twitter</dt>
        <dd>{{twitter}}</dd>
      </dl>
      {{/each}}
    </dd>
  </dl>
  {{/with}}

  <div><label><b>Availability</b></label>
    {{availability}}</div>
  <br />
  <div><label><b>Brief</b></label>
    {{#each tags}}
      <span class="label label-tag">{{short}}</span>
    {{/each}}
    <br />
    {{brief}}</div>
</div>


<div id="suggestions"></div>