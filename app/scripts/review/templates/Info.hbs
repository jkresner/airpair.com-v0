<h2><b>{ </b>Request info<b> }</b></h2>

<div><label><b>Brief</b></label>
  {{#each tags}}
    <span class="label label-tag">{{short}}</span>
  {{/each}}
  <p class="brief">{{brief}}</p></div>
<br />


{{#if isCustomer}}<div><label><b>Budget</b></label> {{budget}}/{{pricing}} = ${{ total }} p.h.</div>{{/if}}

 {{#with company}}
 <dl>
  <dt>Company</dt>
  <dd>{{name}}</dd>
  {{#if url}}
  <dt style="display:none">Url</dt>
  <dd style="font-weight:normal"><a href="http://{{ url }}" target="_blank">http://{{ url }}</a></dd>
  {{/if}}
  <dt style="display:none">About</dt>
  <dd>{{about}}}</dd>
  <dt>Contact</dt>
  <dd class="contact">
    {{#each contacts}}

    <div>
      {{#if pic }}
        <img src="{{ pic }}" />
      {{else}}
        <img src="/images/default-avatar.jpg" />
      {{/if}}
    </div>

    <dl>
      <dt>Name</dt>
      <dd>{{fullName}}</dd>
      {{#if isCustomer}}
        <dt>Email</dt>
        <dd>{{email}}</dd>
        <dt>Gmail</dt>
        <dd>{{gmail}}</dd>
        <dt>Twitter</dt>
        <dd>{{twitter}}</dd>
      {{/if}}
    </dl>
    {{/each}}
  </dd>
</dl>
{{/with}}

<div style="clear:both"><label><b>Availability</b></label>
  {{availability}}</div>

{{#if isCustomer}}
  {{#if hasAvailableExpert }}
  <div class="form-actions book-actions">
    <a href="#book/{{_id}}" class="btn btn-warning btn-large">Book expert(s)</a>
  </div>
  {{/if }}
{{/if}}