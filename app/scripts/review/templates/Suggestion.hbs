<div class="suggestionInfo">

  <div class="feedback">
    <img src="{{expert.pic}}" class="user" />

    <div>
      <span class="label label-{{ expertStatus }}">{{ expertStatus }}</span>

      {{#if isCustomer}}
      <p style="margin-top:4px;font-weight:bold">${{ suggestedRate.total }} p.h.</p>
      {{/if}}

      {{#if expertComment }}
        <div><b>{{expert.name}} said</b></div>
        <p>{{ expertComment }}</p>
        <b>Availability</b>
        <p>{{ expertAvailability }}</p>
      {{/if}}

    </div>
  </div>

 {{!  {{#if isCustomer
  <div class="customerReviewForm"></div>
  {{#if customerFeedback

  <div class="feedback">
      <hr />
      <h5>Your thoughts on @{{expert.username</h5>
      <img src="{{custPic" class="user" />
      <div style="margin-top:-5px">
        <b>{{custName</b>
        <div class="rating"><span class="label label-{{ customerRating">{{ customerRating </span> / 5 </div>
        <p>{{ customerFeedback</p>
      </div>
  </div>

  {{/if
  {{/if
 }}
</div>

{{#with expert}}
  {{> Expert }}
{{/with}}

<hr style='clear:both' />