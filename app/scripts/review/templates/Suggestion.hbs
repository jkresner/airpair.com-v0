<div class="suggestionInfo">
  <dl>
    <dt style="padding-top:0">Status <span class="label label-{{ expertStatus }}">{{ expertStatus }}</span></dt>
    <dt style="display:none">Events</dt>

    <!--<dd style="font-size:10px;margin-left:0">{{#each events}}<i>{{ localDateTime utc }}</i> {{name}}<br />{{/each}}</dd>-->

    <hr />

    {{#if customerFeedback}}
      <div class="feedback">
        <label><b>Your feedback</b></label>
        <img src="{{custPic}}" class="user" />
        <div><b>{{ customerRating }}/5</b><br />
        {{ customerFeedback }}</div>
      </div>
    {{/if}}

    {{#if isCustomer}}
      <div class="customerReviewForm"></div>
    {{/if}}

    {{#if expertFeedback }}
      <div class="feedback">
        <label><b>Expert feedback</b></label>
        <img src="{{expert.pic}}" class="user" />
        <div><b>{{ expertRating }}/5</b><br />
        {{ expertFeedback }}</div>
        <br />
        <hr />
        {{ expertComment }}
        <div><b>Availability</b><br />
        {{ expertAvailability }}</div>
      </div>
    {{/if}}

  </dl>

</div>
{{#with expert}}
  {{> Expert }}
  <hr />
{{/with}}