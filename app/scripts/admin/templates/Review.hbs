<fieldset id="reviewDetail">
  <legend>Review
    <label for="leadId"><span id="leadId">#{{ id }}</span>
      &nbsp <span id="status" class="label label-success"> {{ status }} </span>
    </label>
  </legend>

  <div>
    <label>For</label>
      <span id="companyname">
      {{#if company.url }}
        <a href="http://{{ company.url }}" target="_blank">{{ company.name }}</a>
      {{else}}
        {{ company.name }}
      {{/if}}
      </span>
      <p>{{ company.about }}</p>
  </div>

  {{#each contacts }}
  <div>
      <label>Contact</label>
      <span id="contactName">{{ name }}</span>, <span id="contactTitle">{{ title }}</span>
  </div>

  {{/each}}

  <div class="controls">
    <label>Requirements</label>
    <span id="skills">{{{skillList}}</span>
    <div id="brief">{{{ brief }}}</div>
  </div>


  <legend>{{ suggested.length }} Suggested Devs</legend>

  <div id="suggested">

    {{#each suggested }}
      {{#with dev}}

      <div class="suggetion">
        <h4>{{ name }}</h4>
        <img src="{{ pic }}" class="profile" />
        <div class="skills">
          {{#each skills }}
            <span class="label label-success">{{ soId }}</span>
          {{/each }}
        </div>

        <h6>Links:</h6>
        <div class="links">
          {{> devLinks }}
        </div>

        {{/with}}
        <hr />
        <label>Status</label>
        <span class="label label-warning label-{{ status }}">{{ status }}</span>
      </div>
    {{/each}}

  </div>

  <div class="clear:both"></div>
  <hr />


</fieldset>