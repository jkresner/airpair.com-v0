  <div style="float:left;width:64%">

    <div class="control-group">
      <label class="control-label" for="reqStatus">Tags <span class="muted">technologies you want help with</span></label>
      <div class="controls">
        <div id="tagsInput">
          <div id="tagNewForm"></div>
        </div>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="reqBrief">What challenges do you want to solve?</label>
      <div class="controls">
        <textarea id="reqBrief" name="brief" placeholder="Provide a DETAILED brief. Experts ignore short briefs.">{{ brief }}</textarea>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="reqBudget">Budget / hr <span class="muted">we will only suggest devs in your budget</span></label>
      <div id="budgetRBs" class="controls">
        <label for="budget30">$30</label> <input type="radio" id="budget30" name="budget" value="30" />
        <label for="budget60">$60</label>  <input type="radio" id="budget60" name="budget" value="60" />
        <label for="budget90">$90</label>  <input type="radio" id="budget90" name="budget" value="90" />
        <label for="budget130">$130</label>  <input type="radio" id="budget130" name="budget" value="130" />
        <label for="budget180">$180</label>  <input type="radio" id="budget180" name="budget" value="180" />
        <label for="budget250">$250</label>  <input type="radio" id="budget250" name="budget" value="250" />
      </div>
    </div>

  </div>

  <div class="availabilty" class="control-group">
    <label class="control-label" for="reqStatus">Availability</label>
    <div class="controls">
      <div id="availabilityInput"></div>
    </div>
  </div>

  <div style="clear:both"></div>

  <div class="form-actions">
    <a href="#" class="save btn btn-primary">Save</a>
    <a href="#company" class="back btn">Back</a>
  </div>

</fieldset>

