.talk
  .container
    .row.details
      .col-md-8
        h1 {{ workshop.title }}
        time(datetime="{{workshop.time | date:'EEE MMM dd yyyy HH:mmZ'}}", ng-show="showLocalTimes()" format="dddd, MMMM Do YYYY, h:mm a")
        p.description
          | {{ workshop.description }}
          span.tags(ng-repeat="tag in workshop.tags")  {&nbsp;{{tag}}&nbsp;}

        .row
          .col-md-5.m-b-1(ng-if="!session.isSignedIn()")
            .register
              a.btn.btn-orange.loginRequired(href="/airconf-registration" data-return="/airconf-registration") Register to Watch
            .already
              strong Already got an AirConf ticket?
              .sign-in-to-rsvp
                a.loginRequired(href="{{$location}}") Sign in to RSVP

          .col-md-5.m-b-2(ng-if="showRsvp()")
            a.btn.btn-orange.btn-rsvp(href="#", ng-click="attend()") RSVP to Watch

          .col-md-7.m-b-2
            .addthis_sharing_toolbox

      .col-md-4
        div(ng-repeat="speaker in workshop.speakers")
          h1 {{speaker.name}}
          p.description {{speaker.fullBio}}

  .container.viewer
    .player(ng-show="started() && registered()")
      iframe(width="100%" height="443" ng-src="{{youtubeUrl()}}" frameborder="0" allowfullscreen)
    .player(ng-hide="started()")
      a.loginRequired(href="/airconf-registration" data-return="/airconf-registration")
        img.slide.img-responsive(ng-src="/images/landing/airconf/slides/{{workshop.slug}}.jpg")


  .container.audience
    #audience.text-center.m-t-1(ng-show="audience().length")
      h3 Audience Members
      .attendee(ng-repeat="attendee in audience() | uniq:'name'")
        img(ng-src="{{ attendee.picture }}" title="{{ attendee.name }}" style="border-radius: 15px")

  .container.chat
      chat(ng-model="workshop" title="Session Chat")
