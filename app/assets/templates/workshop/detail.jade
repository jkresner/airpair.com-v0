.hero.behind-nav.hero-landing-top
  .container.hero-content.text-bright.animated.fadeInDown
    .row
      .col-md-12
        div(ng-repeat="speaker in workshop.speakers")
          img.img-circle(src="//secure.gravatar.com/avatar/{{speaker.gravatar}}?s=180", alt="{{speaker.name}}", width="50%")
          h2 {{speaker.name}}:
        h6.title
          span &#183;&nbsp;
          span(ng-repeat="tag in workshop.tags") {{tag}}&nbsp;&#183;&nbsp;
        h1 {{workshop.title}}
      .col-sm-8.col-sm-offset-2
        p {{workshop.description}}
        a.btn(href="#", ng-hide="attending()", ng-click="attend()") Attend this Session
        span(ng-show="attending()") You Are Attending

