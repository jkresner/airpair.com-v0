
.hero.talk
  .container
    .details
      .col
        div(ng-repeat="speaker in workshop.speakers")
          h2 {{speaker.name}}
          p {{speaker.fullBio}}
      .col
        h1 {{ workshop.title }}
        p {{workshop.description}}
        span(ng-repeat="tag in workshop.tags")  { {{tag}} }
     .viewer
        br
        time(datetime="{{workshop.time}}",ng-show="showLocalTimes()")
        hr
        div(ng-show="session.isSignedIn()")
          div(ng-show="showRsvp()")
            a.btn.btn-orange.btn-rsvp(href="#", ng-click="attend()") RSVP
            br
            span to see this {{ workshop.title }} live
            .player
              img.slide(src="/images/landing/airconf/slides/{{workshop.slug}}.jpg")
          div(ng-hide="registered()")
            a.btn.btn-orange(href="/airconf-registration", target='_self') Register for AirConf now to watch talk
            .player
              img.slide.unregistered(src="/images/landing/airconf/slides/{{workshop.slug}}.jpg")
          div.attending(ng-show="attending()")
            p.attending You are attending {{ workshop.title }}!
            p You will be able to ask questions and watch the talk live (or after the event) on this page.
            p We will email you 24 hours before to let you know if there is space and how to get into the "front row".
            .player
              img.slide(src="/images/landing/airconf/slides/{{workshop.slug}}.jpg")
        div(ng-hide="session.isSignedIn()")
          a.btn.btn-orange.loginRequired(href="/airconf-registration",data-return="/airconf-registration") Register to watch talk
          br
          span Already got an AirConf ticket? &nbsp
          a.loginRequired(href="{{$location}}") Sign in to RSVP
          hr
          a.loginRequired(href="/airconf-registration",data-return="/airconf-registration")
            img.slide.anonymous(src="/images/landing/airconf/slides/{{workshop.slug}}.jpg")
