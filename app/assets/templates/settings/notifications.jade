.page.expert-me
  .section
    .info
      .received
      div
        span {{ expert.stats.requestCount }}
      div
        span.sub-label requests received
      .response
      div
        span {{ expert.stats.responseRate | number:0 }}%
      div
        span.sub-label response rate
      .pairs
      div
        span {{ expert.stats.paidOrderCount }}
      div
        span.sub-label Air Pairs

  .section
    .updated Updated {{ expert.updated() }}
    h1 notification status

    form.availability
      .expert-status
        .send-toggle.top
          .toggle.on(ng-class="expert.isReady() ? 'active' : ''", ng-click="expert.toggleStatus()")
          .toggle.off(ng-class="expert.isReady() ? '' : 'active'", ng-click="expert.toggleStatus()")
        label(ng-show="expert.isReady()") Send me AirPairs!
        label(ng-hide="expert.isReady()") Busy ATM
        input#status(type="checkbox", ng-checked="expert.status", ng-model="expert.status", ng-change="expert.update()", ng-true-value="'ready'" ng-false-value="'busy'")
      .hours(ng-show="expert.isReady()")
        select.top(ng-model="expert.hours", ng-change="expert.update()", ng-options="h for h in hourRange")
        label Hrs/Week
      .date(ng-hide="expert.isReady()")
        input.top#busyUntil(ng-model="expert.busyUntil", ng-change="expert.update()", type="date")
        label Busy Until
      .times(ng-show="expert.isReady()")
        .top
          input(id="availability", type="text", placeholder="What days and times are you available to AirPair?", ng-model="expert.availability", ng-change="expert.update()", ng-delay="500")
        label(for="availability") Best Times
      .times(ng-hide="expert.isReady()")
        .top
          input(id="availability", type="text", placeholder="Briefly, what are you doing while away?", ng-model="expert.availability", ng-change="expert.update()", ng-delay="500")
        label(for="availability") Why You're Busy

  .section
    .updated Updated {{ expert.updated() }}
    .title
      h1 notification price range
    .slider-row.hourly
      .slider-wrapper
        .slider-col
          .tag Public Rate
            .pointer
        .slider.slider-col(ng-show="initSlider()")
      .type Hourly Range

    .slider-row.header
      .slider-wrapper
        .slider-col
          .row.dispersed
            .col-xs-2.text-center $10
            .col-xs-2.text-center $40
            .col-xs-2.text-center $70
            .col-xs-2.text-center $110
            .col-xs-2.text-center $160
            .col-xs-2.text-center $230

  .section
    .updated Updated {{ expert.updated() }}
    h1 subscription settings
    .slider-row.header
      .slider-wrapper
        .slider-col
          .row
            .col-xs-4 Beginner
            .col-xs-4 Intermediate
            .col-xs-4 Expert
      .type What types of airpairs
    form.tags(ng-model-options="{ getterSetter: true }")
      .slider-row.level(ng-repeat="tag in expert.tags")
        .slider-wrapper
          .slider-col
            .row
              .col-xs-4
                input(type="checkbox", ng-checked="expert.tagHasLevel(tag, 'beginner')", ng-model="tag.levelBeginner", ng-change="expert.update()", ng-delay="500")
              .col-xs-4
                input(type="checkbox", ng-checked="expert.tagHasLevel(tag, 'intermediate')", ng-model="tag.levelIntermediate", ng-change="expert.update()", ng-delay="500")
              .col-xs-4
                input(type="checkbox", ng-checked="expert.tagHasLevel(tag, 'expert')", ng-model="tag.levelExpert", ng-change="expert.update()", ng-delay="500")
        .type(ng-click="tag.toggleTagLevels()") {{tag.name}}
          .all-levels(ng-class="tag.levelAny() ? 'active' : ''")
