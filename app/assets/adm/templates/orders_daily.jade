
.container
  .row
    .col-sm-2
      h3.text-thin.m-b-2 Day by Day
    .col-sm-3.m-t-1
      input.form-control(ng-model="searchString" type="text" placeholder="Search all orders")
      .spinner(ng-show="loading" style="position: absolute;top: 2px;right: 18px;")
    .col-sm-2.m-t-1
      button.btn.btn-default(ng-model="newOnly" btn-checkbox) New Only
    .col-sm-4.m-t-1
      .input-group
        span.input-group-addon Start
        input.form-control(type="date" name="startdate" ng-model="dateStart" placeholder="yyyy-MM-dd" min="2013-01-01" max="" style="width:160px" required)
        span.input-group-addon End
        input.form-control(type="date" name="enddate" ng-model="dateEnd" placeholder="yyyy-MM-dd" min="2013-01-01" max="" style="width:160px" required)



  table.table.table-hover
    tr.row-divide(ng-repeat-start="week in weeks")
